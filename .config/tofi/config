# A complete reference of available options can be found in `man 5 tofi`.

### Fonts

	font = "青鸟华光仿宋2"
	font-size = 17
	font-features = ""
	font-variations = ""
	hint-font = true

### Text theming

	text-color = #eeeef2

	# Prompt text theme
	prompt-color = #ed3b3b
	prompt-background = #00000000
	prompt-background-padding = 0
	prompt-background-corner-radius = 0

	# Placeholder text theme
	placeholder-color = #dd90cfff
	placeholder-background = #00000000
	placeholder-background-padding = 0
	placeholder-background-corner-radius = 0

	# Input text theme
	input-color = #ed3b3b
	input-background = #00000000
	input-background-padding = 0
	input-background-corner-radius = 0

	# Default result text theme
	default-result-color = #f4f3d7
	default-result-background = #00000000
	default-result-background-padding = 0
	default-result-background-corner-radius = 0

	alternate-result-color = #f4f4f2
	alternate-result-background = #00000000
	alternate-result-background-padding = 0
	alternate-result-background-corner-radius = 0

	# Selection text
	selection-color = #eebb33
	selection-background = #00000000
	selection-background-padding = 0
	selection-background-corner-radius = 0

	# Matching portion of selection text
	selection-match-color = #00000000


### Text cursor theme

	# Supported values: bar, block, underscore
	text-cursor-style = underscore
	text-cursor-color = #ed3b3b
	# text-cursor-background = #000000
	text-cursor-corner-radius = 0
	# text-cursor-style = underscore, or to 2 otherwise.

### Text layout

	prompt-text = "   ~"
	prompt-padding = 50
	placeholder-text = ""
	num-results = 0
	result-spacing = 15

	horizontal = false
	min-input-width = 0

### Window theming

	width = 720
	height = 480
