	corner-radius = 10

	padding-top = 26
	padding-bottom = 8
	padding-left = 8
	padding-right = 8

	clip-to-padding = true
	scale = false

### Window positioning

	output = ""
	anchor = center
	exclusive-zone = -1

	margin-top = 0
	margin-bottom = 0
	margin-left = 0
	margin-right = 0

