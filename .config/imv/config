# Default config for imv

[options]

overlay = false
suppress_default_binds = true
upscaling_method = nearest_neighbour

[binds]
q = quit

# Image navigation
<Left> = prev
<bracketleft> = prev
<Right> = next
<bracketright> = next
gg = goto 1
<Shift+G> = goto -1

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other
x = close
f = fullscreen
d = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
