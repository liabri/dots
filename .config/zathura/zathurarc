# Disable statusbar. Default is "s"
set guioptions				""

# Show a tilde instead of the full home path
set statusbar-home-tilde	"true"
set statusbar-h-padding		60
set statusbar-v-padding		50
set smooth-scroll			true
set selection-clipboard		clipboard
set font					"Fira Mono 11"
set adjust-open				"width"
set window-resize-open		"width"
set scroll-page-aware		"true"
set scroll-full-overlap		0.01
set scroll-step				150
set incremental-search		true

# Keybinds
map = zoom in
map - zoom out
map k scroll up
map j scroll down
map h scroll left
map l scroll right
map K scroll half-up
map J scroll half-down
map f toggle_fullscreen
map w recolor
map [fullscreen] = zoom in
map [fullscreen] k scroll up
map [fullscreen] j scroll down
map [fullscreen] h scroll left
map [fullscreen] l scroll right
map [fullscreen] K scroll half-up
map [fullscreen] J scroll half-down
map [fullscreen] f toggle_fullscreen

# Aesthetics
set recolor					true
set default-bg				"#18191c"
set default-fg				"#d3d3d7"
set statusbar-bg			"#18191c"
set statusbar-fg			"#d3d3d7"
set highlight-color			"#b03ffc"
set highlight-active-color	"#b03ffc"
set highlight-transparency	"0.3"
set recolor-darkcolor		"#d3d3d7"
set recolor-lightcolor		"#18191c"
set page-padding 			1
set tabbar-fg				"#d3d3d7"
set tabbar-bg				"#18191c"
set inputbar-bg				"#131313"
set inputbar-fg				"#79aaeb"
set notification-bg			"#d3d3d7"
set notification-fg			"#18191c"
set notification-error-bg	"#e56f92"
set notification-error-fg	"#000000"
set notification-warning-bg	"#e56f92"
set notification-warning-fg	"#000000"